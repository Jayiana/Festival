        </div>
        <div class="decoration-line"></div>
    </div>
</div>

@code {
    private RegisterDto registerDto = new();
    private bool registerFailed;
    private string? registerMessage;

    private async Task HandleRegister()
    {
        registerFailed = false;
        registerMessage = null;

        if (registerDto.Password != registerDto.ConfirmPassword ||
            string.IsNullOrWhiteSpace(registerDto.Email))
        {
            registerFailed = true;
            registerMessage = "Passwords don't match or fields are incomplete.";
            return;
        }

        try
        {
            var response = await UserService.RegisterAsync(registerDto);

            if (response.Success)
            {
                registerMessage = "Account created! Redirecting to login...";
                await Task.Delay(2000);
                Navigation.NavigateTo("/login");
            }
            else
            {
                registerFailed = true;
                registerMessage = $"Registration failed: {response.Message}";
            }
        }
        catch (Exception ex)
        {
            registerFailed = true;
            registerMessage = $"Registration error: {ex.Message}";
        }
    }
}

