@page "/booking"

<div class="booking-page">
    <!-- Background Decorations -->
    <div class="floating-elements">
        <div class="floating-star">⭐</div>
        <div class="floating-music">🎵</div>
        <div class="floating-heart">💖</div>
        <div class="floating-star">🌟</div>
        <div class="floating-music">🎶</div>
        <div class="floating-heart">💝</div>
        <div class="floating-star">✨</div>
        <div class="floating-music">🎤</div>
    </div>

    <div class="geometric-shapes">
        <div class="shape circle"></div>
        <div class="shape square"></div>
        <div class="shape triangle"></div>
        <div class="shape diamond"></div>
        <div class="shape hexagon"></div>
    </div>

    <div class="animated-lines">
        <div class="line line-1"></div>
        <div class="line line-2"></div>
        <div class="line line-3"></div>
    </div>

    <div class="booking-container">
        <div class="booking-header">
            <h1 class="booking-title">
                <span class="title-sparkle">✨</span>
                <span class="title-icon">🎫</span>
                Festival Bookings
                <span class="title-icon">🎫</span>
                <span class="title-sparkle">✨</span>
            </h1>
            <div class="booking-decoration">
                <span>🎪</span>
                <span>🎤</span>
                <span>🎵</span>
                <span>🎧</span>
                <span>🎪</span>
            </div>
        </div>

        <div class="booking-content">
            <div class="booking-card">
                <div class="card-header">
                    <h2><i class="fas fa-calendar-check"></i> Book Your Festival Experience</h2>
                </div>
                <div class="card-content">
                    <p>Welcome to the ShowTime Festival booking portal! Here you can:</p>
                    <ul>
                        <li><i class="fas fa-ticket-alt"></i> Purchase festival tickets</li>
                        <li><i class="fas fa-campground"></i> Book camping spots</li>
                        <li><i class="fas fa-utensils"></i> Reserve food & beverage packages</li>
                        <li><i class="fas fa-shuttle-van"></i> Arrange transportation</li>
                        <li><i class="fas fa-gift"></i> Buy merchandise</li>
                    </ul>
                    <div class="coming-soon">
                        <div class="coming-soon-badge">
                            <span class="badge-icon">🚀</span>
                            Coming Soon
                            <span class="badge-icon">🚀</span>
                        </div>
                        <p>Our booking system is under development. Stay tuned for an amazing festival experience!</p>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
